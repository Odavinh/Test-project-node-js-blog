<% if (items.length) { %>
    <ul>
      <% } %>
  
        <% items.forEach(function(item){ %>
          <li id="<%= items.id %>">
              <div class="headPost">
                <a href="/user/<%= item.owner.login %>" class="link"><%= item.owner.login %></a>
                <spam class="date"><%= moment(item.createdAt).fromNow(); %></spam>
              </div>
            <%=  item.body %><br>
              <span class="link" id="reply"> Відповісти</span>
              <%- include('./comments.ejs', {items: item.children}) %>
          </li>
          <% }) %>
  
            <% if (items.length) { %>
    </ul>
    <% } %>