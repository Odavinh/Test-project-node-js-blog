<% include ../layout/header.ejs %>
<div class="main">
    <div class="container">
        <div class="content add-post">   
          <form method="post" class="post-form">
              <h2>Добавлення поста</h2>
            <div class="form-group">
              <label for="post-title">Заголоаок</label>
              <input type="text" id="post-title" name="title" />
            </div>
            <div class="form-group">
              <label for="post-body">Стаття</label>
              <textarea name="body" id="post-body" cols="30" rows="20"></textarea>
            </div>
            <div class="buttons">
              <button class="publish-button" id="publish">Опублікувати</button>
            </div>
          </form>
        </div>
  
      <% include ../layout/sidebar.ejs %>
    </div>
  </div>
  
